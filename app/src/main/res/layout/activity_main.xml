<!-- res/layout/activity_main.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Button to show Achievements UI -->
    <Button
        android:id="@+id/btnShowAchievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Achievements"
        android:layout_marginBottom="16dp"/>

    <!-- Button to create or fetch a Player -->
    <Button
        android:id="@+id/btnCheckPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check or Create Player"
        android:layout_marginBottom="16dp"/>

    <!-- Button to update an Achievement's progress -->
    <Button
        android:id="@+id/btnUpdateAchievement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Achievement Progress"/>
</LinearLayout>