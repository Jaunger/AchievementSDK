<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@android:color/background_light">

    <!-- Display Current Player -->
    <TextView
        android:id="@+id/textCurrentPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Player: None"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="16dp"
        android:textColor="@android:color/black"/>

    <!-- Player Selection Buttons -->
    <Button
        android:id="@+id/buttonPlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Player 1"
        android:padding="8dp"/>

    <Button
        android:id="@+id/buttonPlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Player 2"
        android:padding="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- Achievement Buttons -->
    <Button
        android:id="@+id/buttonMilestoneAchievement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Milestone Achievement"
        android:padding="8dp"/>

    <Button
        android:id="@+id/buttonHiddenAchievement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Hidden Achievement"
        android:padding="8dp"/>

    <Button
        android:id="@+id/buttonProgressAchievement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Progress Achievement"
        android:padding="8dp"/>

    <!-- Show Achievements Button -->
    <Button
        android:id="@+id/buttonShowAchievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Achievements"
        android:padding="8dp"
        android:layout_marginTop="16dp"/>

</LinearLayout>